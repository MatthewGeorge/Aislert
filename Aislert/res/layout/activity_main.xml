<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    style="@style/aislert_mainWindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/gotham_book"
        android:textColor="#000000"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/hello_world" 
    />
    
	<TextView
        android:id="@+id/gotham_medium"
        android:textColor="#000000"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/hello_world"
	/>

	<Button
	    android:id="@+id/list"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/gotham_book"
	    android:padding="8dp"
	    android:text="@string/button_lists"
	    android:textAlignment="center"
	    android:textAllCaps="true" />

</RelativeLayout>